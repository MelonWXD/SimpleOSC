<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dongua.simpleosc">


    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />


    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app"
        android:supportsRtl="true"
        android:theme="@style/Theme.Design.Light.NoActionBar">
        <activity android:name=".LaunchActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.AuthorizeActivity"/>
        <activity android:name=".activity.MainActivity"/>
        <activity android:name=".activity.DetailActivity"/>
        <activity android:name=".activity.GalleryActivity"
            android:configChanges="orientation"/>
        <activity android:name=".activity.TweetDetailActivity"/>
        <activity android:name=".activity.PubActivity"
            android:theme="@style/Transparent.NoActionBar"/>
    </application>

</manifest>