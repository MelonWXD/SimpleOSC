<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <android.support.design.widget.TabLayout
            android:id="@+id/tl_news_tab"
            android:padding="@dimen/lay_8"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="@dimen/lay_40"
            app:tabSelectedTextColor="@color/green200"
            app:tabTextAppearance="@style/tl_tab_text"
            app:tabIndicatorColor="@color/green200"
            app:tabBackground="@drawable/tl_tab_selector"/>

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="@dimen/lay_8"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_svg_search"/>


    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </android.support.v4.view.ViewPager>




</LinearLayout>