<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dongua.simpleosc.activity.MainActivity">


    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/line"/>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/gray"
        android:layout_above="@id/fag_nav"/>
    <fragment
        android:id="@+id/fag_nav"
        android:name="com.dongua.simpleosc.ui.nav.BottomNavFragment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lay_48"
        android:layout_alignParentBottom="true">

    </fragment>


</RelativeLayout>
