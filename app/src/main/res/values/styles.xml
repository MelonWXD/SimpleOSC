<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Transparent.NoActionBar" parent="Theme.Design.Light.NoActionBar">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <!--<item name="windowEnterAnimation">@null</item>-->
        <!--<item name="windowExitAnimation">@null</item>-->
        <!--<item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>-->

    </style>

    <style name="BottomNavItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">@dimen/lay_12</item>
        <item name="android:paddingRight">@dimen/lay_12</item>
    </style>

    <style name="NewsTabText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">

    </style>


    <style name="h_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="tl_tab_text" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/font_18</item>
    </style>


    <style name="user_info_count">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/selector_user_info_tab_item</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="user_formation_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">@string/zero</item>
        <item name="android:textSize">@dimen/font_24</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="user_formation_text_small" parent="user_formation_text">
        <item name="android:textSize">@dimen/font_12</item>

    </style>


    <style name="popup_window_anim" parent="@android:style/Animation">
        <!--<item name="android:windowEnterAnimation">@anim/push_scale_left_in</item>-->
        <!--<item name="android:windowExitAnimation">@anim/push_scale_left_out</item>-->
    </style>


</resources>
